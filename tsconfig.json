{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2019"],
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
